---
import NavigationLinks from "../components/NavigationLinks.astro";
import { Icon } from 'astro-icon/components'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head> 
	<body class="font-mono">
		<main class="md:container md:mx-auto w-full min-h-screen">
			<header class="flex items-center justify-between px-4 py-8 font-medium">
				<nav class="flex items-center justify-center gap-x-8 text-2xl">
					<NavigationLinks />
				</nav>
				<nav>
					<Icon name="logos:twitter" width="28" height="28"/>
				</nav>
			</header>
			<article>
				<slot />
			</article>
			<footer></footer>
		</main>
	</body>
</html>
<style is:global></style>
